# Environment Configuration Example
# Copy this file to .env and update the values

# General
NODE_ENV=development
LOG_LEVEL=info

# API Gateway
GATEWAY_PORT=3000
JWT_SECRET=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Service Ports
PRODUCT_SERVICE_PORT=3001
INVENTORY_SERVICE_PORT=3002
ORDER_SERVICE_PORT=3003
CUSTOMER_SERVICE_PORT=3004
REPORTING_SERVICE_PORT=3005
ALERT_SERVICE_PORT=3006

# Service URLs (for API Gateway)
PRODUCT_SERVICE_URL=http://localhost:3001
INVENTORY_SERVICE_URL=http://localhost:3002
ORDER_SERVICE_URL=http://localhost:3003
CUSTOMER_SERVICE_URL=http://localhost:3004
REPORTING_SERVICE_URL=http://localhost:3005
ALERT_SERVICE_URL=http://localhost:3006

# Database Configuration
DB_HOST=localhost
DB_USERNAME=postgres
DB_PASSWORD=password

# Product Service Database
PRODUCT_DB_PORT=5432
PRODUCT_DB_NAME=product_db

# Inventory Service Database
INVENTORY_DB_PORT=5433
INVENTORY_DB_NAME=inventory_db

# Order Service Database
ORDER_DB_PORT=5434
ORDER_DB_NAME=order_db

# Customer Service Database
CUSTOMER_DB_PORT=5435
CUSTOMER_DB_NAME=customer_db

# Reporting Service Database
REPORTING_DB_PORT=5436
REPORTING_DB_NAME=reporting_db

# Alert Service Database
ALERT_DB_PORT=5437
ALERT_DB_NAME=alert_db

# Message Broker
RABBITMQ_URL=amqp://admin:password@localhost:5672
RABBITMQ_MANAGEMENT_URL=http://localhost:15672

# Cache
REDIS_URL=redis://localhost:6379

# Email Configuration (for Alert Service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring (Optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Development Tools
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin
